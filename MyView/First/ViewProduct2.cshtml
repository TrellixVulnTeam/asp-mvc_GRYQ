@model redux.Models.ProductModel
@{
    Layout = "_Layout";
    var product = ViewData["product"] as redux.Models.ProductModel;
}
<div class="card bg-danger text-white">

    <h1 class="card-header">@product.Name</h1>
    <div class="card-body">
        <p class="card-text">
            Gia : @product.Price
        </p>
    </div>
</div>